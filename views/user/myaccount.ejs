    <h1 class="ui center aligned header">My Account</h1>
    <h3>Username</h3>
    <p><%= currentUser.username %></p>
    <h3>Password</h3>
    <p>******</p>
    <div class="ui bottom attached buttons">
      <button class="ui big primary button" id="updateProfileButton">Edit</button>
    </div>
