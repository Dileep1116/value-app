    <div class="ui tiny modal">
      <i class="close icon"></i>
      <div class="header">Edit My Account</div>
      <div class="content">
        <form action="/myaccount?_method=PUT" method="post" class="ui big form">
          <div class="field">
            <label for="username">Change Username</label>
            <input value="<%= currentUser.username %>" type="text" name="username">
          </div>
          <div class="field">
            <label>Change Password</label>
              <em>Coming Soon</em>
          </div>
