<% include ../partials/header %>

<div class="ui text container segment">
  <div class="ui attached segment">
    <h1 class="ui center aligned header">Edit My Account</h1>
    <form action="/myaccount?_method=PUT" method="post" class="ui big form">
      <div class="field">
        <label for="username">Change Username</label>
        <input value="<%= currentUser.username %>" type="text" name="username">
      </div>
      <div class="field">
        <label>Change Password</label>
          <em>Coming Soon</em>
      </div>
      <!-- <div class="two fields">
        <div class="field">
          <label for="password">Change Password</label>
          <input placeholder="Password" type="password" name="password">
        </div>
        <div class="field">
          <label for="passwordMatch">Confirm Password</label>
          <input placeholder="Confirm Password" type="password" name="passwordMatch">
        </div>
      </div> -->
      <div class="ui hidden divider"></div>
      <div class="ui two bottom attached buttons">
        <a class="ui big negative button" href="/myaccount">Cancel</a>
